@model IEnumerable<emarket.Models.Product>

@{
    ViewBag.Title = "Shop1";
}


<!DOCTYPE html>
<html>
<head>
    <style>

        .container {
            width: 100%;
            height: 100%;
            padding: 0px;
            margin: 0px;
        }

        * {
            margin: 0;
            padding: 0;
        }

        .mainbody {
            text-align: center;
            height: 100%;
            width: 100%;
            background-image: url('/Content/source/shoping.jpg');
        }

        td.button:active {
            background-color: #3387A0;
            cursor: pointer;
        }

        .strokeme {
            color: white;
            text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
        }

        td.button:hover {
            cursor: pointer;
        }

        .minimalButton {
            background-color: white;
            border: none;
            color: black;
            padding: 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 12px;
            font-size: 15px;
            font-weight: bold;
        }

        table, body {
            font-family: 'Monaco', monospace;
            color: white;
            font-size: 20px;
            font-weight: bold;
        }

            table.ShopTable {
                background-color: #74D3EC;
                border: 5px white;
                border-collapse: collapse;
                width: 70%;
                margin-left: auto;
                margin-right: auto;
            }
    </style>
</head>

<body>
    <div class="mainbody" style="margin: 0;">

        <br><br><br>

        @using (Html.BeginForm("Index", "Store", FormMethod.Post))
        {
            <button class="minimalButton" type="button" name="stores">Επιστροφή στα καταστήματα</button>
        }
        <p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p>
        <h2><span style="color:white;">Καλοσωρίσατε στο Σουπερμάρκετ "Φρεσκάδα"</span></h2>
        <br><br>

        <label for="categories">Επιλέξτε κατηγορία προϊόντνων:</label>
        <select class="minimalButton" name="categories" id="categories">
            <option value="frouta">Φρούτα</option>
            <option value="zymarika">Ζυμαρικά</option>
            <option value="thalassina">Θαλασσινά</option>
        </select>
        <br><br>
        <p style="color:red">@ViewBag.AddedString</p>
            <table class="ShopTable" border="1">
                @for (var i = 0; i < Model.Count(); i += 3)
                {
                    <tr>
                        <td style="width: 33%;">
                            <br>
                            <img src=@Model.ElementAt(i).sourceOfImage width="300" height="175" /><br><br>
                            @Model.ElementAt(i).Info
                            <br>
                            @Model.ElementAt(i).Price
                            <br>

                            @Html.ActionLink("Προσθήκη στο καλάθι", "Shopping", "Store", Model.ElementAt(i), new { @class = "minimalButton" })<br><br>

                        </td>
                        <td style="width: 33%;">
                            <br>
                            <img src=@Model.ElementAt(i + 1).sourceOfImage width="300" height="175" /><br><br>
                            @Model.ElementAt(i + 1).Info
                            <br>
                            @Model.ElementAt(i + 1).Price
                            <br>
                            @Html.ActionLink("Προσθήκη στο καλάθι", "Shopping", "Store", Model.ElementAt(i + 1), new {@class= "minimalButton" })<br><br>
                        </td>
                        <td style="width: 33%;">
                            <br>
                            <img src=@Model.ElementAt(i + 2).sourceOfImage width="300" height="175" /><br><br>
                            @Model.ElementAt(i + 2).Info
                            <br>
                            @Model.ElementAt(i + 2).Price
                            <br>
                            @Html.ActionLink("Προσθήκη στο καλάθι", "Shopping", "Store", Model.ElementAt(i + 2), new { @class = "minimalButton" })<br><br>
                        </td>
                    </tr>
                }
            </table>
        <br><br>
        Η Τοποθεσία Μας
    <br><br>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5282.642111595224!2d23.715355374404904!3d38.06856938476487!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14a1a232d3bfb505%3A0x178dfa85d7f098fd!2sRiga%20Fereou%207%2C%20Zefiri%20134%2051!5e0!3m2!1sen!2sgr!4v1622824310085!5m2!1sen!2sgr" width="1335" height="250" style="border:0;" allowfullscreen="" loading="lazy">
    </iframe>
    <br><br>
    </div>

</body>
</html>

