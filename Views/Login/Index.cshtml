@model emarket.Models.Users

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    if (@ViewBag.Message != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Message
        </div>
    }
    <style>

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        html, body {
            margin: 0;
            height: 100%;
            overflow: hidden
        }

        .container {
            width: 100%;
            height: 100%;
            padding: 0px;
            margin: 0px;
        }

        .mainbody {
            text-align: center;
            height: 100%;
            width: 100%;
            /*background-image: url('/Content/source/login.jpg');*/
        }

        td.button:active {
            background-color: #3387A0;
            cursor: pointer;
        }

        td.button:hover {
            cursor: pointer;
        }

        table, body {
            font-family: 'Monaco', monospace;
            color: black;
            font-size: 20px;
            font-weight: bold;
        }

        table.LoginTable {
            background-color: transparent;
            border-width: 0px;
            border: none;
        }

        .button {
            border-radius: 5px;
            padding: 5px 10px;
        }

        tr.LoginTable {
            height: 180px;
        }

        .inputvalidate {
            font-size: 15px;
            color: crimson;
        }

        .inputtextbox {
            padding: 10px 50px;
            border-width: 0px;
            border: none;
            background-color: white;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            border-radius: 25px;
        }

        .input1 {
            padding: 5px 30px;
            border-width: 0px;
            border: none;
            background-color: white;
            text-align: center;
            font-size: 16px;
            font-weight: bold;
            border-radius: 25px;
        }
    </style>
    <body style="background-image: url('/Content/source/login.jpg')">
        <div class="mainbody" style="margin: 0;">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @*<p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p>*@


            <h2 style="margin-top: 12%;"><span style="color:white;">Συνδεθείτε στον Λογαριασμό σας</span></h2>
            <br><br>
            <table class="LoginTable" style="width: 45%; height: 180px; margin-left: auto; margin-right: auto;">
                <tr class="ShopTable">
                    <td style="width: 100%; height: 18px; text-align:center;">
                        @Html.TextBoxFor(m => m.Email, new { @class = "inputtextbox", @placeholder = "example@gmail.com" })
                        <br>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "inputvalidate" })
                        <br>
                        @Html.PasswordFor(m => m.Password, new { @class = "inputtextbox", @placeholder = "Password" })
                        <br>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "inputvalidate" })
                        <br>
                    </td>
                </tr>
            </table>
            <input type="submit" value="Σύνδεση" class="input1" />
            <p style="color: white;
                      margin-top: 35px;
                      background-color: red;
                      width: fit-content;
                      display: block;
                      margin-left: auto;
                      margin-right: auto;">@ViewBag.myString</p>
            @*<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>*@
        </div>
    </body>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

