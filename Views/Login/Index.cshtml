@model emarket.Models.Users

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Message
        </div>
    }
    <head>
        <style>

            * {
                margin: 0;
                padding: 0;
            }

            html, body {
                margin: 0;
                height: 100%;
                overflow: hidden
            }

            .container {
                margin-left: 0px;
                margin-right: 0px;
                width: 100%;
                height: 100%;
            }

            .mainbody {
                text-align: center;
                height: 100%;
                width: 100%;
                background-image: url('/Content/source/login.jpg');
            }

            td.button:active {
                background-color: #3387A0;
                cursor: pointer;
            }

            .strokeme {
                color: white;
                text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;
            }

            td.button:hover {
                cursor: pointer;
            }

            table, body {
                font-family: 'Monaco', monospace;
                color: black;
                font-size: 20px;
                font-weight: bold;
            }

                table.LoginTable {
                    background-color: transparent;
                    border-width: 0px;
                    border: none;
                }

            .button {
                border-radius: 5px;
                padding: 5px 10px;
            }

            tr.LoginTable {
                height: 180px;
            }

            .inputvalidate {
                font-size: 15px;
                color: crimson;
            }

            .inputtextbox {
                padding: 10px 50px;
                border-width: 0px;
                border: none;
                background-color: white;
                text-align: center;
                font-size: 18px;
                font-weight: bold;
                border-radius: 25px;
            }

            .input1 {
                padding: 5px 30px;
                border-width: 0px;
                border: none;
                background-color: white;
                text-align: center;
                font-size: 16px;
                font-weight: bold;
                border-radius: 25px;
            }
        </style>
    </head>
    <body>
        <div class="mainbody" style="margin: 0;">

            <p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p><p>&nbsp;</p>


            <h2><span style="color:white;">Συνδεθείτε στον Λογαριασμό σας</span></h2>

            <table class="LoginTable" style="width: 45%; height: 180px; margin-left: auto; margin-right: auto;">
                <tr class="ShopTable">
                    <td style="width: 100%; height: 18px; text-align:center;">
                        @Html.TextBoxFor(usr => usr.Email, new { @class = "inputtextbox", @placeholder = "example@gmail.com" })
                        <br>
                        @Html.ValidationMessageFor(usr => usr.Email, "", new { @class = "inputvalidate" })
                        <p>&nbsp;</p>
                        @Html.PasswordFor(usr => usr.Password, new { @class = "inputtextbox", @placeholder = "Password" })
                        <br>
                        @Html.ValidationMessageFor(usr => usr.Password, "", new { @class = "inputvalidate" })
                    </td>
                </tr>
            </table>
            <input type="button" value="Σύνδεση" class="input1" />
            <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        </div>
        <div>
            @Html.ActionLink("Go To Login", "Index")
        </div>

    </body>
}
