<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - E-Market</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
<body>
    <style>
        .container {
            width: 100%;
            height: 100%;
            padding: 0px;
            margin: 0px;
        }

        .d {
            float: none;
            color: red;
            text-decoration: none;
            display: block;
            text-align: left;
            font-size: 25px;
        }
    </style>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="padding: 15px 45px;">E-Market</a>
            </div>
            <div class="navbar-collapse collapse" style="float:right">
                <ul class="nav navbar-nav" style="color: white">
                    @if (Session["UserID"] == null)
                    {
                        <li>@Html.ActionLink("Home Page", "Index", "Home")</li>
                        <li>@Html.ActionLink("Login", "Index", "Login")</li>
                        <li>@Html.ActionLink("Register", "Register", "Login")</li>
                    }
                    else if (Convert.ToInt32(Session["IsAdmin"]) == 1)
                    {
                        <li>@Html.ActionLink("Home Page", "Index", "Home")</li>
                        <li>@Html.ActionLink("Admin Page", "AdminPageUsers", "Home")</li>
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <img src="/Content/source/account.jpg" style="width: 22px; height: 22px"> Your account

                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li class="d">Welcome, Admin!</li>
                                <li class="d">@Session["UserName"]</li>
                                <li class="d">@Html.ActionLink("Logout", "Logout", "Login")</li>
                                <li class="d">@Html.ActionLink("Reset Password", "Index", "Login")</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home Page", "Index", "Home")</li>
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Our Stores
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li class="d">@Html.ActionLink("Καματερό", "Shop1", "Store")</li>
                                <li class="d">@Html.ActionLink("Αγία Μαρίνα", "Shop2", "Store")</li>
                                <li class="d">@Html.ActionLink("Πειραιάς", "Shop3", "Store")</li>
                                <li class="d">@Html.ActionLink("Γκύζη", "Shop4", "Store")</li>
                                <li class="d">@Html.ActionLink("Άλιμος", "Shop5", "Store")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Cart", "Cart", "Store")</li>
                        <li>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <img src="/Content/source/account.jpg" style="width: 22px; height: 22px"> Your account

                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li class="d">@Session["UserName"]</li>
                                <li class="d">@Html.ActionLink("Logout", "Logout", "Login")</li>
                                <li class="d">@Html.ActionLink("Reset Password", "Index", "Login")</li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>