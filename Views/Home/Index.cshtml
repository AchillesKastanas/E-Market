@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .container {
            width: 100%;
            height: 100%;
            padding: 0px;
            margin: 0px;
        }

        .mainbody {
            text-align: center;
            height: 100%;
            width: 100%;

        }


        td.button:active {
            background-color: #3387A0;
            cursor: pointer;
        }

        td.button:hover {
            cursor: pointer;
        }

        table, body {
            font-family: 'Monaco', monospace;
            color: white;
            font-size: 20px;
            font-weight: bold;
            background-color: aliceblue;
            overflow: hidden;
        }
    </style>
</head>
<body style="background-image: url('/Content/source/MainMenuBackgroundBlue.jpg')">
    <div class="mainbody">


        <h2 style="margin-top: 10%;"><span style="color:white;">E-Market</span></h2>
        <p style=" margin-top: 3%; margin-bottom: 3%; background-color: lightgreen; color: black; width: fit-content; display: block; margin-left: auto; margin-right: auto;">@Convert.ToString(Session["finishCart"])</p>
        @{
            Session["finishCart"] = null; // if displayed above clear the value after
        }
        <div style="margin-top: 8%;">
            <p style="color:white;">Order online.</p>

            <p style="color:white;">Avoiding closed and crowded places. </p>

            <p style="color:white;">We take care of ourselves and our beloved ones.</p>

        </div>
    </div>

</body>
</html>